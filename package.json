{
  "name": "srtd",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Supabase Repeatable Template Definitions (srtd) is a powerful CLI for managing repeatable SQL templates tailored for Postgres features that require full redefinition, such as functions, stored procedures, and RLS policies. Streamline your development with live reloads and simplified workflows.",
  "bin": "dist/cli.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "author": {
    "name": "Timm Stokke",
    "email": "timm@stokke.me",
    "url": "https://timm.stokke.me"
  },
  "keywords": [
    "cli",
    "migrations",
    "database",
    "postgresql",
    "supabase",
    "sql-templates",
    "repeatable-migrations",
    "database-migrations",
    "supabase-cli"
  ],
  "scripts": {
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "build": "rm -rf dist && tsc",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "run": "npm run build && npm link && chmod u+x ./dist/cli.js && srtd",
    "repomix": "npx repomix ./src vitest.config.ts vitest.setup.ts package.json ./__tests__ README.md"
  },
  "files": ["dist"],
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "chokidar": "^4.0.3",
    "glob": "^7.2.3",
    "ink": "^5.0.0",
    "pastel": "^3.0.0",
    "pg": "^8.13.1",
    "react": "^18.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.27.11",
    "@sindresorhus/tsconfig": "^7.0.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "chalk": "^5.3.0",
    "eslint": "^8.0.0",
    "ink-testing-library": "^4.0.0",
    "lefthook": "^1.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
